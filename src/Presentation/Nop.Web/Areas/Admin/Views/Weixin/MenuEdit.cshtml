@model MenuModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Weixin.Menus.EditMenu").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Menus");
}

<form asp-controller="Weixin" asp-action="MenuEdit" method="post" id="menu-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Weixin.Menus.EditMenu") - @Model.SystemName
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="MenuList">@T("Admin.Weixin.Menus.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateMenu", Model)
</form>