@model QrCodeLimitUserModel

@{
    Layout = "_AdminPopupLayout";

    //page title
    ViewBag.PageTitle = T("Admin.Weixin.QrCodeLimits.Users.Edit").Text;
}

@if (ViewBag.RefreshPage == true)
{
    <script>
        try {window.opener.document.forms['@(Context.Request.Query["formId"])'].@(Context.Request.Query["btnId"]).click();}
        catch (e){}
        window.close();
    </script>
}
else
{
    <form asp-controller="Weixin" asp-action="QrCodeLimitUserEditPopup"
          asp-route-Id="@Context.Request.Query["Id"]"
          asp-route-btnId="@Context.Request.Query["btnId"]"
          asp-route-formId="@Context.Request.Query["formId"]">
        <div class="content-header clearfix">
            <h1 class="pull-left">
                @T("Admin.Weixin.QrCodeLimits.Users.Edit")
            </h1>
            <div class="pull-right">
                <button type="submit" name="save" class="btn bg-blue">
                    <i class="fa fa-floppy-o"></i>
                    @T("Admin.Common.Save")
                </button>
            </div>
        </div>
        <div class="content">
            <div class="form-horizontal">
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            @if (string.IsNullOrEmpty(Model.UserName))
                            {
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <nop-label asp-for="UserNameTemp" />
                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-text-row">@Model.UserNameTemp</div>
                                    </div>
                                </div>
                            }
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="UserName" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="UserName" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="Description" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="Description" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="TelNumber" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="TelNumber" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="AddressInfo" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="AddressInfo" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="ExpireTime" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="ExpireTime" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="Published" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="Published" />
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
}
