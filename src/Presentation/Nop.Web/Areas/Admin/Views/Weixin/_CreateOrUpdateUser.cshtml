@model UserModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

@{
    const string hideInfoBlockAttributeName = "UserPage.HideInfoBlock";
    var hideInfoBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideInfoBlockAttributeName);
}

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <nop-cards id="user-cards">
                <nop-card asp-name="user-info" asp-icon="fas fa-info" asp-title="@T("Admin.Weixin.Users.Info")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock" asp-advanced="false">@await Html.PartialAsync("_CreateOrUpdateUser.Info", Model)</nop-card>
                @if (Model.Id > 0)
                {

                }
            </nop-cards>
        </div>
    </div>
</section>