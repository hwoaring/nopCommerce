@model QrCodeLimitModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Weixin.QrCodeLimits.EditQrCodeLimit").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("QrCodeLimits");
}

<form asp-controller="Weixin" asp-action="QrCodeLimitEdit" method="post" id="qrcodelimit-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Weixin.QrCodeLimits.EditQrCodeLimit") - @Model.SysName
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="QrCodeLimitList">@T("Admin.Weixin.QrCodeLimits.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateQrCodeLimit", Model)
</form>